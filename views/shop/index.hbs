{{#if noUserArea}}
<div class="modal" tabindex="-1" role="dialog" id="userareaModal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="/" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Welcome to Spicebay!</h5>

                </div>
                <div class="modal-body text-center">

                    <p>Please select the closest area to you</p>
                    <div class="form-check" data-value="Finland">
                        <input class="form-check-input" type="radio" name="areaRadios" id="exampleRadios1"
                            value="Finland" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            Finland
                        </label>
                    </div>
                    <div class="form-check" data-value="Canada">
                        <input class="form-check-input" type="radio" name="areaRadios" id="exampleRadios2"
                            value="Canada">
                        <label class="form-check-label" for="exampleRadios2">
                            Canada
                        </label>
                    </div>
                    <div class="form-check" data-value="India">
                        <input class="form-check-input" type="radio" name="areaRadios" id="exampleRadios3"
                            value="India">
                        <label class="form-check-label" for="exampleRadios3">
                            India
                        </label>
                    </div>
                    <img class="img-fluid justify-content-center mt-4 areaImage"
                        src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/07/EU-Finland_%28orthographic_projection%29.svg/220px-EU-Finland_%28orthographic_projection%29.svg.png"
                        alt="Card image cap">
                </div>


                <div class="modal-footer">
                    <button type="submit" class="btn btn-dark">Continue</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}


<div class="row ml-1 mr-1">
    <div id="carousel-example-1z" class="carousel slide carousel-fade shadow-lg  mt-2" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-1z" data-slide-to="1"></li>
            <li data-target="#carousel-example-1z" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block" style="object-fit: cover; min-width:100%"
                    src="https://reviewsin.com/wp-content/uploads/2018/08/herb-spice-featured.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block"
                    src="https://images.ctfassets.net/3s5io6mnxfqz/3pLESMFjNopcam5J5qGcoT/0427544b060a8fd29e3c0b68281d56cf/AdobeStock_191057762.jpeg"
                    alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block"
                    src="https://www.azernews.az/media/2018/08/16/essential_herbs_and_spices_in_azerbaijani_cuisine.jpg"
                    alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row mr-1 ml-1 mt-2 mb-4">
    <div class="col-sm-12 justify-content-center" style="text-align: center;">
        <div id="success" class="alert alert-success {{#if noMessages}} d-none {{/if}} ">
            {{ successMsg }}
        </div>
        <div class="nav justify-content-center">
            <h1>Categories</h1>
            <div class="w-100"></div>
            <a class="nav-link text-white border bg-dark" href="/">All</a>
            {{#each categories }}
            <a class="nav-link text-white border bg-dark" href="/{{ this.ID }}">
                {{ this.categoryName }}
            </a>
            {{/each}}

        </div>
    </div>
</div>


<div class="row mr-1 ml-1 mt-2 mb-4">
    <div class="col-sm-12 justify-content-center" style="text-align: center;">
        <h3>{{ categoryInfo.description }}</h3>
        {{#if categoryInfo.caution}}
        <div class="alert alert-danger" role="alert">
            <h4>{{ categoryInfo.caution }}</h4>
        </div>
        {{/if}}
    </div>
</div>


{{# each products }}
<div class="row">
    {{# each this }}
    <div class="card shadow-lg d-flex bg-white rounded text-center col padding-0 col-sm-4 cardcol">

        <img class="card-img-top img-fluid justify-content-center" src="{{this.imagePath}}" alt="Card image cap">
        <div class="card-body d-flex flex-column bg-light">
            <h5 class="card-title">{{this.productName}}</h5>
            <p class="card-text text-dark">{{this.description}}</p>
            <div class="amount">Globally available: {{this.amount}} grams</div>
            <div class="price">${{this.cost}} per gram</div>
            <button class="mt-auto btn btn-success addShoppingcartBtn" id="{{this.ID}}" onclick="loadCart('{{this.ID}}')">Add to shopping
                cart</button>
        </div>

    </div>
    {{/each}}
</div>
{{/each}}
