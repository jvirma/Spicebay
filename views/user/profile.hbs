<div class="row justify-content-center  mr-1 ml-1 padding-0">

    <div class="card-header col-sm-12  mt-4 font-weight-bold border padd"><h3>User Information</h3></div>
    <ul class="list-group col-sm-12 padding-0">

        <li class="list-group-item ">
            <div class="col-sm-6 d-inline-block">
                <strong>E-mail</strong>
            </div>
            <div class="col-sm-6 float-right">
                {{data.email}}
            </div>
        </li>
        <li class="list-group-item ">
            <div class="col-sm-6 d-inline-block">
                <strong>First name</strong>
            </div>
            <div class="col-sm-6 float-right">
                {{data.firstName}}
            </div>
        </li>
        <li class="list-group-item ">
            <div class="col-sm-6 d-inline-block">
                <strong>Last name</strong>
            </div>
            <div class="col-sm-6 float-right">
                {{data.lastName}}
            </div>
        </li>
        <li class="list-group-item ">
            <div class="col-sm-6 d-inline-block">
                <strong>Account created</strong>
            </div>
            <div class="col-sm-6 float-right">
                {{data.createdAt}}
            </div>
        </li>
        <li class="list-group-item ">
            <div class="col-sm-6 d-inline-block">
                <strong>Account information updated</strong>
            </div>
            <div class="col-sm-6 float-right">
                {{data.updatedAt}}
            </div>
        </li>

    </ul>
    <div class="col-sm-12 padding-0 mt-2">
        <button type="button" class="btn btn-danger float-right" data-toggle="modal" data-target="#exampleModal">Delete account</button>
        <a class="btn btn-success float-right" href="/user/update">Change information</a>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete account</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete your account? Deleting your account is permanent.
                </div>
                <form action="/user/profile" method="post">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Yes, delete my account</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>